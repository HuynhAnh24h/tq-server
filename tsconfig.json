{
    "compilerOptions": {
        "target": "ES6",
        "module": "Commonjs",
        "rootDir": "src",
        "baseUrl": "./",
        "outDir": "dist",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "@/*":[
                "src/*"
            ]
        },
       "typeRoots": ["./src/types", "./node_modules/@types"], 
       "types": ["node", "express"]
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "dist"
    ]
}